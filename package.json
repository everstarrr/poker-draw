{
  "name": "solana-poker-draw-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Solana Poker Draw - Monorepo with client and server",
  "scripts": {
    "dev": "pnpm --filter client dev",
    "server:dev": "pnpm --filter server dev",
    "dev:all": "pnpm --parallel --filter client --filter server dev",
    "build": "pnpm --filter client build && pnpm --filter server build",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "start:server": "pnpm --filter server start",
    "preview": "pnpm --filter client preview",
    "lint": "pnpm --filter client lint",
    "init-cards": "pnpm --filter server init-cards",
    "migrate-balance": "pnpm --filter server migrate-balance",
    "fix-replace-cards": "pnpm --filter server fix-replace-cards"
  },
  "keywords": [
    "poker",
    "solana",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "devDependencies": {}
}
